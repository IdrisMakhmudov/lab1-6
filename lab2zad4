#include <iostream>
#include <cmath>
using namespace std;

int main() {
    float x1, x2, y1, y2, length, width;
    cout << "Enter coordinates of first point (x1, y1): "; cin >> x1 >> y1;
    cout << "Enter coordinates of second point (x2, y2): "; cin >> x2 >> y2;
    length = x1-x2; length=abs(length);
    width = y1-y2; width=abs(width);
    if (length!=0 && width!=0) 
    cout << "Rectangle area: " << length*width << ", its perimetr: " << 2*(length+width);
    else cout << "This is not a rectangle";
    return 0;
    }
//4. Даны координаты двух противоположных вершин прямоугольника:
//(x1, y1), (x2, y2). Стороны прямоугольника параллельны осям
//координат.
//Найти периметр и площадь данного прямоугольника.
