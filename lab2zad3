#include <iostream>
#include <cmath>
using namespace std;

int main() {
    float x1, x2, x3, AC, BC;
    cout << "Enter coordinates of point A: "; cin >> x1;
    cout << "Enter coordinates of point B: "; cin >> x2;
    cout << "Enter coordinates of point C: "; cin >> x3;
    AC = abs(x3-x1);
    BC = abs(x3-x2);
    cout << "Length of AC: " << AC << ", BC: " << BC << ", they product is: " << AC*BC;
    return 0;
    }
//3. Даны три точки A, B, C на числовой оси. Точка C расположена
//между точками A и B. Найти произведение длин отрезков AC и BC
